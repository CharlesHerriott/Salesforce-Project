<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Change_to_Submitted</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(  Invoice_Status__c  , &quot;Submitted&quot;) &amp;&amp; ( ISNULL(Invoice_Submitted_Date__c))</errorConditionFormula>
    <errorMessage>Changing status to submitted : - Invoice Submitted Date REQUIRED</errorMessage>
</ValidationRule>
